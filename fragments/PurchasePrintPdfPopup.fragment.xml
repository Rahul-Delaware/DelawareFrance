<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="{PrintPdfPopup>/Title}" contentWidth="80%" contentHeight="80%" verticalScrolling="false" resizable="true">
		<FlexBox height="100%">
			<PDFViewer source="{PrintPdfPopup>/PdfUri}" displayType="Embedded" showDownloadButton="false">
				<layoutData>
					<FlexItemData growFactor="1"/>
				</layoutData>
			</PDFViewer>
		</FlexBox>
		<endButton>
			<Button text="{i18n>Close}" press="_onClosePurchasePrintPdfPopup"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>